#include<stdio.h>
#include<ctype.h>
#include<string.h>
char stack[20];
int top = -1;
void push(char s)
{
    stack[++top]=s;
}
char pop()
{
    if(top==-1)
        return -1;
    else
        return stack[top--];
}

int priority(char s)
{
    if(s=='(')
        return 0;
    if(s=='+' || s=='-')
        return 1;
    if(s=='*' || s=='/' || s=='%')
        return 2;
    if(s=='^' || s=='$')
        return 3;
}

int main()
{
    printf("infix expression to postfix notation\n");
    printf("TANUJA P , 192321052\n");
    printf("---------------------------\n");
    char exp[20];
    char *e ,s;
    printf("enter the expression :: \n");
    scanf("%s",exp);
    printf("----------------------------\n");
    e=exp;
    printf("postfix expression : \n");
    while(*e!='\0')
    {
        if(isalnum(*e))
            printf("%c",*e);
        else if(*e=='(')
               push(*e);
        else if(*e==')')
        {
            while((s=pop())!='(')
                  printf("%c",s);
        }
        else
        {
            while( priority(stack[top])>=priority(*e))
                printf("%c",pop());
            push(*e);
        }
        e++;
    }
    while(top!=-1)
    {
        printf("%c",pop());
    }
    printf("\n-------------------------------\n");
}

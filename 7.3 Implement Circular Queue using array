#include <stdio.h>
#include <stdlib.h>

#define MAX_SIZE 5

int queue[MAX_SIZE];
int front = -1;
int rear = -1;

void Enqueue(int value)
{
    if (rear == MAX_SIZE - 1)
    {
        printf("Queue is full. Cannot enqueue item.\n");
        return;
    }
    else
    {
        if (front == -1)
        {
            front = 0;
        }
        rear++;
        queue[rear] = value;
        printf("Enqueued %d into the queue\n", value);
    }
}

void Dequeue()
 {
    if (front == -1 || front > rear)
    {
        printf("Queue is empty. Cannot dequeue item.\n");
        return;
    }
    else
    {
        printf("Dequeued %d from the queue\n", queue[front]);
        front++;
        if (front > rear)
        {
            front = rear = -1;
        }
    }
}

int isEmpty()
{
    if (front == -1 || front > rear)
    {
        return 1;
    }
    else
    {
        return 0;
    }
}

int isFull()
{
    if (rear == MAX_SIZE - 1)
    {
        return 1;
    }
    else
    {
        return 0;
    }
}



void Display()
{
    if (isEmpty())
    {
        printf("Queue is empty.\n");
        return;
    }
    else
    {
        printf("Queue elements: ");
        for (int i = front; i <= rear; i++)
        {
            printf("%d ", queue[i]);
        }
        printf("\n");
    }
}

int Peek()
{
    if (isEmpty())
    {
        printf("Queue is empty.\n");
        return -1;
    }
    else
    {
        return queue[front];
    }
}

int Rear()
{
    if (isEmpty())
    {
        printf("Queue is empty.\n");
        return -1;
    }
    else
    {
        return queue[rear];
    }
}

int main()
{
    printf("IMPLEMENT CIRCULAR QUEUE USING ARRAY\n");
    printf("TANUJA P , 192321052\n");
    printf("------------------------------\n");
    int choice, item;

    while (1) {
        printf("\nQueue Operations:\n");
        printf("1. Enqueue\n");
        printf("2. Dequeue\n");
        printf("3. isEmpty\n");
        printf("4. isFull\n");
        printf("5. Display\n");
        printf("6. Peek\n");
        printf("7. Rear\n");
        printf("8. Exit\n");
        printf("Enter your choice: ");

        scanf("%d", &choice);

        switch (choice)
        {
            case 1:
                printf("Enter value to enqueue: ");
                scanf("%d", &item);
                Enqueue(item);
                break;
            case 2:
                Dequeue();
                break;
            case 3:
                if (isEmpty())
                {
                    printf("Queue is empty.\n");
                }
                else
                {
                    printf("Queue is not empty.\n");
                }
                break;
            case 4:
                if (isFull())
                {
                    printf("Queue is full.\n");
                }
                else
                {
                    printf("Queue is not full.\n");
                }
                break;
            case 5:
                Display();
                break;
            case 6:
                printf("Front element: %d\n", Peek());
                break;
            case 7:
                printf("Rear element: %d\n", Rear());
                break;
            case 8:
                printf("Exiting...\n");
                exit(0);
            default:
                printf("Invalid choice\n");
        }
    }
}

